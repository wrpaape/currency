require "minitest/autorun"
require_relative '../lib/currency_trader.rb'
require_relative '../lib/currency_converter.rb'
require_relative '../lib/currency.rb'

CURR_CODES = "USD EUR GBP INR AUD CAD ZAR NZD JPY".split(" ")
CONV_RATES_OLD = "1.00000 0.90867 0.64620 63.4724 1.27968 1.23039 11.8959 1.36916 121.543".split(" ")
CURR_TABLE_OLD = Hash.new
CURR_CODES.each_with_index { |code, ind| CURR_TABLE_OLD[code.to_sym] = CONV_RATES_OLD[ind].to_f }
CONV_RATES_NEW = "1.00000 0.90987 0.64621 63.4940 1.27866 1.22941 11.9071 1.36882 121.552".split(" ")
CURR_TABLE_NEW = Hash.new
CURR_CODES.each_with_index { |code, ind| CURR_TABLE_NEW[code.to_sym] = CONV_RATES_NEW[ind].to_f }

class Currency_trader_test < Minitest::Test
  def setup
    @ct = Currency_trader.new(CURR_TABLE_OLD, CURR_TABLE_NEW, Currency.new(1000000, "JPY"))
    curr_table_old1 = {LOL: 0.5, IDK: 1.0, WTF: 150}
    curr_table_new1 = {LOL: 0.6, IDK: 1.0, WTF: 140}
    @ct_LOL1 = Currency_trader.new(curr_table_old1, curr_table_new1, Currency.new(1000000, "LOL"))
    @ct_IDK1 = Currency_trader.new(curr_table_old1, curr_table_new1, Currency.new(1000000, "IDK"))
    @ct_WTF1 = Currency_trader.new(curr_table_old1, curr_table_new1, Currency.new(1000000, "WTF"))
    @ct_LOL1.best_bet
    @ct_IDK1.best_bet
    @ct_WTF1.best_bet
    curr_table_old2 = {LOL: 0.5, IDK: 1.0, WTF: 100}
    curr_table_new2 = {LOL: 0.3, IDK: 1.0, WTF: 60}
    @ct_LOL2 = Currency_trader.new(curr_table_old2, curr_table_new2, Currency.new(1000000, "LOL"))
    @ct_IDK2 = Currency_trader.new(curr_table_old2, curr_table_new2, Currency.new(1000000, "IDK"))
    @ct_WTF2 = Currency_trader.new(curr_table_old2, curr_table_new2, Currency.new(1000000, "WTF"))
    @ct_LOL2.best_bet
    @ct_IDK2.best_bet
    @ct_WTF2.best_bet

    # puts @ct_LOL2.best_bet
    # puts @ct_IDK2.best_bet
    # puts @ct_WTF2.best_bet
  end

  def test_old_and_new_currency_converter_objects_exist
    assert(@ct.cc_old)
    assert(@ct.cc_new)
  end

  def test_best_bet_exists
    assert(@ct.best_bet)
  end

  def test_currency_trader_trades_to_most_appreciating_currency
    assert_equal(:WTF, @ct_LOL1.code_best_trade)
    assert_equal(:WTF, @ct_IDK1.code_best_trade)
    assert_equal(:WTF, @ct_WTF1.code_best_trade)

    assert_equal(:LOL, @ct_LOL2.code_best_trade)
    assert_equal(:LOL, @ct_IDK2.code_best_trade)
    assert_equal(:LOL, @ct_WTF2.code_best_trade)
  end

  def test_currency_trader_returns_proper_value_roi_for_LOLIDKWTF_tables
    assert_equal(1, @ct_LOL1.roi.amount <=> 0)
    assert_equal(1, @ct_IDK1.roi.amount <=> 0)
    assert_equal(0, @ct_WTF1.roi.amount <=> 0)

    assert_equal(1, @ct_LOL2.roi.amount <=> 0)
    assert_equal(0, @ct_IDK2.roi.amount <=> 0)
    assert_equal(1, @ct_WTF2.roi.amount <=> 0)
  end
end
